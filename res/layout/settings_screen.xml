<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:scrollbars="vertical"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"> 
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="fill_parent"
	android:layout_width="fill_parent"
	android:orientation="vertical"
	android:stretchColumns="1">
	<TableRow>
	<TextView
		android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dip"
        android:text="@string/settings_question_font_size"
        
    />
    <Spinner
    	android:id="@+id/question_font_size_spinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:drawSelectorOnTop="true"
        android:prompt="@string/settings_question_font_size_prompt"
        />
        </TableRow>
        <TableRow>
	<TextView
		android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dip"
        android:text="@string/settings_answer_font_size"
        
    />
    <Spinner
    	android:id="@+id/answer_font_size_spinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:drawSelectorOnTop="true"
        android:prompt="@string/settings_answer_font_size_prompt"
        />
    </TableRow>
    
    <TableRow>
	<TextView
		android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dip"
        android:text="@string/settings_question_align"
        
    />
    <Spinner
    	android:id="@+id/question_align_spinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:drawSelectorOnTop="true"
        android:prompt="@string/settings_question_align_prompt"
        />
    </TableRow>
    
    <TableRow>
	<TextView
		android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dip"
        android:text="@string/settings_answer_align"
        
    />
    
    <Spinner
    	android:id="@+id/answer_align_spinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:drawSelectorOnTop="true"
        android:prompt="@string/settings_answer_align_prompt"
        />
    </TableRow>
    <TableRow>
	<TextView
		android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dip"
        android:text="@string/settings_question_locale"
        
    />
    <Spinner
    	android:id="@+id/question_locale_spinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:drawSelectorOnTop="true"
        android:prompt="@string/settings_question_locale_prompt"
        />
    </TableRow>
    <TableRow>
	<TextView
		android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dip"
        android:text="@string/settings_answer_locale"
        
    />
    <Spinner
    	android:id="@+id/answer_locale_spinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:drawSelectorOnTop="true"
        android:prompt="@string/settings_answer_locale_prompt"
        />
    </TableRow>
    
    <TableRow>
	<TextView
		android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dip"
        android:text="@string/settings_html_display"
        
    />
    <Spinner
    	android:id="@+id/html_spinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:drawSelectorOnTop="true"
        android:prompt="@string/settings_html_display"
        />
    </TableRow>

    <TableRow>
    <TextView
		android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dip"
        android:text="@string/settings_text_color"
        />
    <Spinner
        android:id="@+id/text_color_spinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:drawSelectorOnTop="true"
        android:prompt="@string/settings_text_color"
    />
    </TableRow>

    <TableRow>
    <TextView
		android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dip"
        android:text="@string/settings_bg_color"
        />
    <Spinner
        android:id="@+id/bg_color_spinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:drawSelectorOnTop="true"
        android:prompt="@string/settings_bg_color"
    />
    </TableRow>

    
    <TableRow>
	<TextView
		android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dip"
        android:text="@string/settings_ratio"
        
    />
    <Spinner
    	android:id="@+id/ratio_spinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:drawSelectorOnTop="true"
        android:prompt="@string/settings_ratio"
        />
    </TableRow>


	<TableRow>
		<CheckBox android:id="@+id/checkbox_wipe"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:text="@string/settings_wipe" />
	</TableRow>

	<TableRow>
		<CheckBox android:id="@+id/checkbox_shuffle"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:text="@string/settings_shuffle" />
	</TableRow>
    
    
    

<TableRow>
	<LinearLayout android:orientation="horizontal"
		android:layout_width="fill_parent" android:layout_height="wrap_content">
		<Button android:id="@+id/settting_save" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_marginLeft="3dip"
			android:text="@string/settings_save" />
		<Button android:id="@+id/setting_discard" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_marginLeft="3dip"
			android:text="@string/settings_discard" />
	</LinearLayout> 
    </TableRow>

</TableLayout>
</ScrollView>


